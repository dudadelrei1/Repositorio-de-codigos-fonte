    resultado2 = valor1*0.10; COFINS = Valor*0.04;
    resultado3 = resultado1+resultado2; ISS = Valor*0.05;
    CSLL = valor1*0.09;
    
    if(valor1>=60000){
        printf("Voce paga de imposto de renda trimestral: %2.f\n", resultado1);
    }
    if(valor1<=60000){
        printf("Voce paga de imposto de renda trimestral: %2.f\n", resultado3);
