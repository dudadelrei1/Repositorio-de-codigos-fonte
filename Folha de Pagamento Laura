    printf("INSS Patronal (20%%): R$ %.2f\n", inss_patronal);
    printf("FGTS (8%%): R$ %.2f\n", fgts);
    printf("Total de encargos (INSS + FGTS): R$ %.2f\n", inss_patronal + fgts);

    }
    
    if(PATRAO_FUNCIONARIO == 2) {
         //iniciando variaveis// 
    float valor = 0, vale = 0, dias = 0, transporte = 0, resultado = 0, resultado1 = 0;
