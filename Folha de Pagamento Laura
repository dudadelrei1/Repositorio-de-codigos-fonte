        printf("Voce paga imposto de renda: %.2f\n", resultado1);
    }
    
    if (valor >= 3751.06 && valor <= 4664.68) {
        printf("Voce paga imposto de renda: %.2f\n", resultado2);
    }
    
    if(valor > 4664.68) {
        printf("Voce paga imposto de renda: %.2f\n", resultado3);
    }
    
    if (vale = 0) {
        printf ("auxilio alimenticio não foi somado");
    }
    if (transporte = 1){
    printf("Valor do vale transporte a ser descontado da sua folha de pagamento: %.2f\n", resultado4);
    }
    
     if (valor == 1518) {
        printf("Valor do desconto do seu INSS: %2.f\n", resultado);
    }
    
    if (valor > 1518 && valor < 2793.88) {
        printf("Valor do desconto do seu INSS: %2.f\n", resultado5);
    }
    
    if (valor > 2793.89 && valor < 4190.83) {
        printf("Valor do desconto do seu INSS: %2.f\n", resultado6);
    }
    
     if (valor > 4190.84 && valor < 8157.41) {
        printf("Valor do desconto do seu INSS: %2.f\n", resultado7);
    }
    
    if (MQ == 1) {
    printf("Valor do sindicato a ser descontado da sua folha de pagamento: %.2f\n", resultado8);
    }
    
    if (MQ == 2) {
    printf("Valor do sindicato a ser descontado da sua folha de pagamento: %.2f\n", resultado9);
    }
    
    printf("Seu salario final com auxilios e vales é: %.2f\n", Salario_final);
    printf("É depositado mensalmente em seu fundo de garantia o valor equivalente a: %.2f\n", FGTS);

