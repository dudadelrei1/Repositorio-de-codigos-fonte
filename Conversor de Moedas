#include <stdio.h>

int main () {

    /* Programa para a conversão de moedas */

    int opcao = 0;
    float valor_real = 0;
    float valor_dolar = 0;
    float cotacao_dolar = 5.6833;

    printf("Digite 1 para converter de real para dólar ou 2 para converter de dólar para real: ");
    scanf(" %i", &opcao);

    if (opcao == 1) {
        printf("Digite o valor em reais: ");
        scanf(" %f", &valor_real);
        valor_dolar = valor_real / cotacao_dolar;
        printf("O valor em dólares é: $ %.2f\n", valor_dolar);
    }
    else if (opcao == 2) {
        printf("Digite o valor em dólares: ");
        scanf(" %f", &valor_dolar);
        valor_real = valor_dolar * cotacao_dolar;
        printf("O valor em reais é: R$ %.2f\n", valor_real);
    }
    else {
        printf("Opção inválida\n");
    }


    float real, euro, cotacao_euro = 6.49; 
    

    printf("\nEscolha uma das opções abaixo:\n");
    printf("1. Real para Euro\n");
    printf("2. Euro para Real\n");
    printf("Escolha a opcao 1 ou 2: ");
    scanf("%d", &opcao);

    if (opcao == 1) {
        printf("Digite o valor em Reais (BRL): ");
        scanf("%f", &real);
        euro = real / cotacao_euro;
        printf("%.2f BRL = %.2f EUR\n", real, euro);
        
    } else if (opcao == 2) {
        printf("Digite o valor em Euros (EUR): ");
        scanf("%f", &euro);
        real = euro * cotacao_euro;
        printf("%.2f EUR = %.2f BRL\n", euro, real);
        
    } else {
        printf("Opcao invalida!\n");
    }

   
    return 0;
}